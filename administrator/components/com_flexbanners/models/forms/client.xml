<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details"
		addfieldpath="/administrator/components/com_flexbanners/models/fields"
	>
		<field name="clientid" type="int" default="0"
			readonly="true" class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL" description ="JGLOBAL_FIELD_ID_DESC"/>

		<field name="clientname" type="text" class="inputbox"
			size="40" label="ADMIN_FLEXBANNER_CLIENTNAME"
			description="ADMIN_FLEXBANNER_CLIENTNAME_DESC"
			required="true" />

		<field name="contactname" type="text" class="inputbox"
			size="40" label="ADMIN_FLEXBANNER_CONTACTNAME"
			description="ADMIN_FLEXBANNER_CONTACTNAME_DESC" 
			required="true" />

		<field name="contactemail" type="email" class="inputbox"
			size="40" label="ADMIN_FLEXBANNER_CONTACTEMAIL"
			description="ADMIN_FLEXBANNER_CONTACTEMAIL_DESC"
			required="true" />

		<field name="juserid" type="linkedto"
			label="ADMIN_FLEXBANNER_LINKEDTO" 
			description="ADMIN_FLEXBANNER_LINKEDTO_DESC"
			required="false" />

		<field name="state" type="list"
			label="JSTATUS" description="COM_FLEXBANNERS_FIELD_CLIENT_STATE_DESC"
			class="inputbox" size="1" default="1"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

	</fieldset>
</form>
