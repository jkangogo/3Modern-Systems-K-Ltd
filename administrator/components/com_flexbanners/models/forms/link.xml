<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details"
		addfieldpath="/administrator/components/com_flexbanners/models/fields"
	>
		<field name="linkid" type="text" default="0"
			readonly="true" class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL" description ="JGLOBAL_FIELD_ID_DESC"/>

		<field name="linkname" type="text" class="inputbox"
			size="40" label="ADMIN_FLEXBANNER_LINKNAME"
			description="ADMIN_FLEXBANNER_LINKNAME_DESC"
			required="true" />

		<field name="linkurl" type="url" class="inputbox"
			size="40" label="ADMIN_FLEXBANNER_LINKURL"
			description="ADMIN_FLEXBANNER_LINKURL_DESC"
			required="true"
			validate="url" />
		<field name="state" type="list"
			label="JSTATUS" description="COM_BANNERS_FIELD_CLIENT_STATE_DESC"
			class="inputbox" size="1" default="1"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

	</fieldset>
</form>
