<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="hidden">
        <field name="id"
               type="hidden"/>
    </fieldset>

    <!-- title/alias fields -->
    <fieldset>
        <field name="title"
               type="text"
               class="inputbox input-xxlarge input-large-text"
               label="COM_FOCALPOINT_FORM_LBL_LEGEND_TITLE"
               description="COM_FOCALPOINT_FORM_DESC_LEGEND_TITLE"
               required="true"
               maxlength="150"/>

        <field name="alias"
               type="text"
               class="inputbox"
               label="COM_FOCALPOINT_FORM_LBL_LEGEND_ALIAS"
               required="false"
               hint="JFIELD_ALIAS_PLACEHOLDER"/>
    </fieldset>

    <fieldset name="general">
        <field name="state"
               type="list"
               class="chzn-color-state"
               label="JSTATUS"
               description="JFIELD_PUBLISHED_DESC"
               default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field name="subtitle"
               type="text"
               label="COM_FOCALPOINT_FORM_LBL_LEGEND_SUBTITLE"
               description="COM_FOCALPOINT_FORM_DESC_LEGEND_SUBTITLE"
               size="30"
               maxlength="300"/>

        <field name="created_by"
               type="user"
               label="COM_FOCALPOINT_FORM_LBL_LEGEND_CREATED_BY"
               description="COM_FOCALPOINT_FORM_DESC_LEGEND_CREATED_BY"/>
    </fieldset>

</form>
